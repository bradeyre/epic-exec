# Database
DATABASE_URL="postgresql://user:password@localhost:5432/virtual-executive"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth Configuration
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars-required"
NEXTAUTH_URL="http://localhost:3000"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Virtual Executive"

# Anthropic Claude API
ANTHROPIC_API_KEY="sk-ant-your-api-key-here"

# Email Service (Resend)
RESEND_API_KEY="re_your-resend-api-key-here"

# Google Ads Integration
GOOGLE_ADS_CLIENT_ID="your-google-ads-client-id.apps.googleusercontent.com"
GOOGLE_ADS_CLIENT_SECRET="your-google-ads-client-secret"

# Meta Ads Integration
META_ADS_CLIENT_ID="your-meta-ads-client-id"
META_ADS_CLIENT_SECRET="your-meta-ads-client-secret"

# Xero Integration
XERO_CLIENT_ID="your-xero-client-id"
XERO_CLIENT_SECRET="your-xero-client-secret"

# Logging
LOG_LEVEL="info"

# Feature Flags
ENABLE_MCP_INTEGRATIONS="true"
ENABLE_NEWSLETTER="true"
ENABLE_CHAT="true"
ENABLE_ADVANCED_ANALYTICS="true"

# Queue & Workers
BULL_REDIS_URL="redis://localhost:6379"
WORKER_ENABLED="true"
WORKER_CONCURRENCY="5"
